<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">


    <TextView
        android:id="@+id/tv_orderdetaigoods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="6dp"
        android:textColor="@color/main_text_color"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_orderdetaigoods_goodsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/tv_orderdetaigoods_price"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/main_text_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_orderdetaigoods_sku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_orderdetaigoods_goodsname"
        android:layout_marginTop="4dp"
        android:textColor="@color/help_text_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_orderdetaigoods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_orderdetaigoods_goodsname"
        android:layout_marginTop="12dp"
        android:textColor="@color/other_text_color"
        android:textSize="14sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_orderdetaigoods_sku"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_orderdetail_change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/cirrang_btn_black"
            android:gravity="center"
            android:padding="12dp"
            android:text="换货"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_orderdetail_refund"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/cirrang_btn_black"
            android:gravity="center"
            android:padding="12dp"
            android:text="退款"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </LinearLayout>


</RelativeLayout>